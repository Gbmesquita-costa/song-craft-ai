{
  "name": "song-craft-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-s database:up && run-s wait-for-postgres && run-s prisma:migrate:dev",
    "postdev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "wait-for-postgres": "tsx infra/scripts/wait-for-postgres.ts",
    "prisma:migrate:dev": "prisma migrate dev",
    "database:up": "docker compose -f compose.yaml up -d song-craft-database",
    "database:down": "docker compose -f compose.yaml down song-craft-database",
    "database:stop": "docker compose -f compose.yaml stop song-craft-database"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
